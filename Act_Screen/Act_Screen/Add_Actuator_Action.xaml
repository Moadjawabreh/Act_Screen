<Window x:Class="Act_Screen.Add_Actuator_Action"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Act_Screen"
        mc:Ignorable="d"
        Title="Add_Actuator_Action" Height="230" Width="280">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Select Action:" FontWeight="Bold" FontSize="16" Margin="0 0 0 10"/>
            <RadioButton x:Name="upDownCloseRadioButton" Content="Up/Down/Close" Margin="0 0 10 0"/>
            <RadioButton x:Name="leftRightCloseRadioButton" Content="Left/Right/Close" Margin="0 0 10 0"/>
            <RadioButton x:Name="unlockLockCloseRadioButton" Content="Unlock/Lock/Close"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0 20 0 0">
                <Button Content="OK" Width="100" Margin="10" Click="OKButton_Click"/>
                <Button Content="Cancel" Width="100" Margin="10" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
